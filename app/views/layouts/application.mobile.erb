<!DOCTYPE html>
<html>
	<head>
	    <title>My Page</title>
	    <meta name="viewport" content="width=device-width, initial-scale=1">
	    <%= stylesheet_link_tag "http://code.jquery.com/mobile/1.2.0/jquery.mobile-1.2.0.min.css", "mobile_alerts" %>
	    <%= javascript_include_tag "http://code.jquery.com/jquery-1.8.2.min.js", "http://code.jquery.com/mobile/1.2.0/jquery.mobile-1.2.0.min.js", "application" %>
	</head>
	<body>
	    <div data-role="page">
	 
	        <div data-role="header">
	            <%= link_to 'Home', root_path, "data-role" => "button", "data-theme" => "c", "data-inline" => "true" %>
	            <%= yield :h1 %>
	        </div>
	 
	        <div data-role="content">
	        	<div>
					<% flash.each do |key, value| %>
						<div class="test test-#{key}">
							<%= content_tag(:div, value) %>
						</div>
					<% end %>
					
					<%= yield %>

					<%= debug(params) if Rails.env.development? %>
				</div>
	        </div>
	 
	        <!--<div data-role="footer">
	            <h4>My Footer</h4>
	        </div>-->
	 
	    </div>
	</body>
</html>