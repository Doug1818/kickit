<% content_for :title do %><title>Billing Info</title><% end %>
<% content_for :h1 do %><h1>Billing Info</h1><% end %>

<div data-role="page" id="billing">
  <%= render 'shared/panel' %>
  <%= render 'shared/header' %>
  <div data-role="content">
    <%= render 'shared/flash', flash: flash %>
    <h3>Billing Info</h3>

    <% if current_user.stripe_customer_id? %>
    	<%= render 'edit_billing' %>
    <% else %>
    	<%= render 'new_billing' %>
    <% end %>
    <%= debug(params) if Rails.env.development? %>
  </div>
</div>