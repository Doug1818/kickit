<!-- if the user has completed a week, show suggested badge, otherwise hide content -->
<% content_for :title do %><title>KickIt Results</title><% end %>
<% content_for :h1 do %><h1>KickIt Results</h1><% end %>

<% if @user.completed_days >= 7 %>

	<h3><%= @user.email %> was successful <%= @user.sdays %> of 7 days last week.  Encourage them with a badge!</h3>

	<%= form_for @supmessage do |f| %>
		<%= render 'shared/error_messages', object: f.object %>
		<%= f.text_area :content, value: @user.badge, style: "height:75px;" %>
		<%= f.hidden_field :user_id, value: @user.id %>
		<%= f.submit "Send badge", class: "btn" %>
	<% end %><br>

	<h3><%= "Their goal: #{@user.goal}" %></h3>
	<table class="pretty_table">
		<% @user.days.order("date desc")[0..6].each do |day| %>
			<tr>
				<td class="date"><%= day.date.strftime("%a, %b %d") %></td>
				<td class="result"><%= RESULTS.key(day.result) %></td>
			</tr>
		<% end %>
	</table>

	<% if @user.supmessages.count > 0 %>
		<h3>Badge History</h3>
		<% @user.supmessages.order("created_at desc").each do |supmessage| %>
			<div class="msg_info"><%= supmessage.created_at.strftime("%a, %b %e, %l:%M%P") %></div>
			<div class="content"><%= supmessage.content.gsub(/\n/, '<br/>').html_safe %></div>
		<% end %>
	<% end %>
<% end %>