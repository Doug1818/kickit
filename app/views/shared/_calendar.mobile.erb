<% if current_user.goal? %>
<h3 style="margin-top:0;margin-bottom:10px;"><strong>Your Goal: <%= current_user.goal %></strong></h3>
<% end %>
<div id="calendar">
	<h3 id="month">
		<%= link_to "<", :month => (@today.beginning_of_month-1).strftime("%Y-%m-01") %>
		<%= h @today.strftime("%B %Y") %>
		<%= link_to ">", :month => (@today.end_of_month+1).strftime("%Y-%m-01") %>
	</h3>
	<%= calendar_for @days, :year => @today.year, :month => @today.month, :today => Date.current do |calendar| %>
		<%= calendar.head('Sun', 'Mon', 'Tue', 'Wed', 'Thu', 'Fri', 'Sat')%>
		<% calendar.day(:day_method => :date) do |date, days| %>
			<%= date.day %>
			<% for day in days %>
				| D<%= h(day.day) %>
				<div class="result">
					<% if day.result? %>
						<% if day.result == 1 %>
              <%= link_to image_tag("glyphicons_206_ok_2.png", size: "15x15"), day_path(day) %>
						<% elsif day.result == 2 %>
							<%= link_to image_tag("glyphicons_207_remove_2.png", size: "15x15"), day_path(day) %>
						<% elsif day.result == 3 %>
							<%= link_to image_tag("glyphicons_030_pencil.png", size: "15x15"), day_path(day) %>
						<% elsif day.result == 4 %>
							<%= link_to image_tag("glyphicons_196_circle_exclamation_mark.png", size: "15x15"), day_path(day) %>
						<% end %>
					<% else %>
						<%= link_to image_tag("iconmonstr-help-icon.png", size: "20x20"), day_path(day) %>
					<% end %>
				</div>
			<% end %>
		<% end %>
	<% end %>
</div>