<% if current_user.program.days.find_by_date(Date.current).goal? %>
	<h3 style="margin-top:0;margin-bottom:10px;">
		<strong>Today's Goal: <%= current_user.program.days.find_by_date(Date.current).goal %></strong>
	</h3>
<% end %>
<div id="calendar">
	<h3 id="month">
		<%= link_to "<", :month => (@today.beginning_of_month-1).strftime("%Y-%m-01") %>
		<%= h @today.strftime("%B %Y") %>
		<%= link_to ">", :month => (@today.end_of_month+1).strftime("%Y-%m-01") %>
	</h3>
	<%= calendar_for @days, :year => @today.year, :month => @today.month, :today => Date.current do |calendar| %>
		<%= calendar.head('Sun', 'Mon', 'Tue', 'Wed', 'Thu', 'Fri', 'Sat')%>
		<% calendar.day(:day_method => :date) do |date, days| %>
			<%= date.day %>
			<% for day in days %>
				| D<%= h(day.day) %>
				<div class="result">
					<% if day.result? %>
						<% if day.result == 1 %>
              <%= link_to image_tag("glyphicons_206_ok_2.png", size: "15x15"), day_path(day) %>
						<% elsif day.result == 2 %>
							<%= link_to image_tag("glyphicons_207_remove_2.png", size: "15x15"), day_path(day) %>
						<% elsif day.result == 3 %>
							<%= link_to image_tag("glyphicons_030_pencil.png", size: "15x15"), day_path(day) %>
						<% elsif day.result == 4 %>
							<%= link_to image_tag("glyphicons_196_circle_exclamation_mark.png", size: "15x15"), day_path(day) %>
						<% elsif day.result == 5 %>
							<%= link_to "FREE DAY", day_path(day), class: "free_day" %>
						<% end %>
					<% else %>
						<%= link_to image_tag("iconmonstr-help-icon.png", size: "20x20"), day_path(day) %>
					<% end %>
				</div>
			<% end %>
		<% end %>
	<% end %>
</div>
<div style="text-align:center;">
<% if current_user.program.this_week.missed > 0 %>
	<p style="margin-bottom:5px;"><strong style="font-size:1.4em;">
		$<%= current_user.program.this_week.missed*current_user.program.daily_commitment %> 
		lost</strong> from missed checkins</p>
<% end %>
<% if current_user.program.this_week.free_days > 0 %>
	<p style="margin-top:5px;"><strong style="font-size:1.4em;">
		<%= "#{current_user.program.free_days_left} #{'free day'.pluralize(current_user.program.free_days_left)}" %>
	</strong> left this week</p>
<% end %>
</div>