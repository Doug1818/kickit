<% content_for :title do %><title>New reminder</title><% end %>
<% content_for :h1 do %><h1>New reminder</h1><% end %>

<%= form_for @reminder do |f| %>
	<%= render 'shared/error_messages', object: f.object %>
	<div class="rem">
		<%= f.time_select :time, { minute_step: 30, ampm: true, time_separator: "" }, { "data-inline" => "true" } %>
		<%= f.submit "Add reminder", class: "submit" %>
	</div>
<% end %>