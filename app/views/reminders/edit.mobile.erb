<% content_for :title do %><title>Edit Reminder</title><% end %>
<% content_for :h1 do %><h1>Edit Reminder</h1><% end %>

<div data-role="page">
	<%= render 'shared/panel' %>
	<%= render 'shared/header' %>
	<div data-role="content">
		<%= render 'shared/flash', flash: flash %>
		<%= form_for @reminder do |f| %>
			<%= render 'shared/error_messages', object: f.object %>
			<div class="rem">
				<%= f.time_select :time, { minute_step: 30, ampm: true, time_separator: "" }, { "data-inline" => "true" } %>
				<%= f.submit "Update", class: "submit", "data-theme" => "d" %>
			</div>
		<% end %>
		<%= debug(params) if Rails.env.development? %>
	</div>
</div>