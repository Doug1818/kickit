          </div>
          <div class="center-align" style="background: #333; border: 1.5pt dashed #fff; margin-top: 10pt; padding: 10pt;clear:both;">
            <%= form_for @lead, :validate => true do |f| %>
              <%= render 'shared/error_messages', object: f.object %>
              <%= f.hidden_field :ab_value, value: ab_value %>
              <div style="margin:20px 0;"><%= f.label :first_name, "My first name is" %>
              <%= f.text_field :first_name, placeholder: "Name", class: "fill-in-the-blank", style: "width:10em" %></div>
              <div style="margin:20px 0;"><%= f.label :email, "my email address is" %>
              <%= f.text_field :email, placeholder: "email", class: "fill-in-the-blank", style: "width:10em" %>,</div>

              <% if browser.firefox? %>
                <%= f.label :goal, "and I want to", style: "margin-right:5px;" %>
                <%= f.select :goal, ["quit","cut back"], {}, { class: "fill-in-the-blank", style: "width:12em;" } %>
              <% else %>
                <div style="margin:20px 0;">
                <%= f.label :goal, "and I want to", style: "margin-right:5px;" %>
                <input id="foo1" class="fill-in-the-blank" style="width:4em; border-top: 1pt solid #333 !important;" type="text" value="" disabled /><%= f.select :goal, ["quit","cut back"], {}, { class: "fill-in-the-blank", style: "width:3.3em; border-top: 1pt solid #333 !important;" } %><input id="foo2" class="fill-in-the-blank" style="width:3em; border-top: 1pt solid #333 !important;" type="text" value="" disabled />
                </div>
              <% end %>

              <div style="margin:20px 0;"><%= f.label :habit_name, "my habit of" %>
              <%= f.text_field :habit_name, placeholder: "habit", class: "fill-in-the-blank", style: "width:10em", id: "signup-habit" %>.</div>
              <%= f.submit "Sign up", class: "btn", style: "margin:10px 0 20px 0;" %>
            <% end %>
          </div>
        
