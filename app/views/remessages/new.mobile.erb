<% content_for :title do %><title>Reminder Message</title><% end %>
<% content_for :h1 do %><h1>Reminder Message</h1><% end %>

<div data-role="page">
	<%= render 'shared/panel' %>
	<%= render 'shared/header' %>
	<div data-role="content">
		<%= render 'shared/flash', flash: flash %>
		<%= form_for @remessage do |f| %>
			<%= render 'shared/error_messages', object: f.object %>
			<div class="rem">
				<%= f.text_area :content, "for" => "textarea" %>
				<%= f.submit "Add Reminder Message", class: "submit", "data-theme" => "d" %>
			</div>
		<% end %>
		<%= debug(params) if Rails.env.development? %>
	</div>
</div>